upstream app_server {
    server unix:{{ site_dir }}run/django.socket;
}

server {
	listen   {{ nginx_http_port }};

	# Turn on directory listing for static files
	#autoindex on;

	include {{ site_nginx_dir }}locations.conf;
	rewrite  ^ https://$host$request_uri? permanent;
}

server {
	listen   {{ nginx_https_port }};

	# Turn on directory listing for static files
	#autoindex on;

	ssl   on;
	ssl_certificate {{ nginx_ssl_dir }}server.crt;
	ssl_certificate_key {{ nginx_ssl_dir }}server.key;
    ssl_dhparam {{ nginx_ssl_dir }}dhparam.pem;
	ssl_session_timeout 5m;
	ssl_protocols {{ nginx_ssl_protocols }};
	ssl_ciphers '{{ nginx_ssl_ciphers }}';
	ssl_prefer_server_ciphers on;
	ssl_session_cache shared:SSL:50m;

	include {{ site_nginx_dir }}locations.conf;
	include {{ site_nginx_dir }}django.conf;
}
