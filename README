      - ntp
      - timezone
      - unattended
      - users

- mysql
  - base
    - ntp
    - timezone
    - unattended
    - users

- nrpe
  - base
    - ntp
    - timezone
    - unattended
    - users

- redis
    - base
      - ntp
      - timezone
      - unattended
      - users

- nginx
    - supervisor
    - base
      - ntp
      - timezone
      - unattended
      - users


